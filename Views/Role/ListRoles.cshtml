@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "ListRoles";
}

<h1>All Roles</h1>

@if (Model.Any())
{
   
    @foreach (var role in Model)
    {
        <h3>Role</h3>
        <p>@role.Name</p>
        
        <a class="button btn-primary" asp-action="EditRole" asp-controller="Role"asp-route-id="@role.Id">Edit</a>
        <a class="button btn-primary" asp-action="DeleteRole" asp-controller="Role" asp-route-id="@role.Id">Delete</a>
    }
    <p></p>
    <a class="button btn-primary" style="width:auto"
       asp-controller="Role" asp-action="CreateRole">Create Role</a>

}
else
{
    <div>
        <h3>No Roles were added, click the button bellow to add a Role.</h3>
    </div>
    <div>
        <a class="button btn-primary" style="width:auto"
           asp-controller="Role" asp-action="CreateRole">Create Role</a>
    </div>

}