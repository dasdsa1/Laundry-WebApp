@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@model WebApplication3.ViewModels.EditScheduleViewModel
@inject UserManager<ApplicationUser> UserManager


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var userName = User.Identity.Name;
}

@using (Html.BeginForm("Save", "Admin"))
{
    <h1>Edit Schedule</h1>
    <div class="form-group">

        @Html.LabelFor(m => m.ScheduledTime)

        @Html.TextBoxFor(m => m.ScheduledTime, "{0:d MMM yyyy}", new { @class = "form-control" })

        @Html.ValidationMessageFor(m => m.ScheduledTime)

    </div>

    if (!Model.UserAddresses.Any())
    {
        <p>No addresses yet, please add an address.</p>
    }

    else
    {
        <div class="form-group">
            @Html.LabelFor(m => m.UserAddressId)
            @Html.DropDownListFor(m => m.UserAddressId, new SelectList(Model.UserAddresses, "Id", "Address"), "Select Address", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.UserAddressId)
        </div>
    }

    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.ApplicationUserId)
    @Html.HiddenFor(m=> m.UserAddress.ApplicationUserId)

    <div>
        <p><button type="submit" class="btn btn-primary">Save</button></p>
    </div>
}